<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    >

    <!--<View-->
    <!--android:id="@+id/view_main"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp_25"-->
    <!--android:background="#ffffff" />-->

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:scaleType="centerInside"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_back"
            android:layout_alignBottom="@id/img_back"
            android:gravity="center"
            android:text="报警设置"
            android:textColor="#4b4b4b"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/img_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/img_log"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#939393"
        android:layout_below="@+id/rl_head"
        android:text="报警方式"
        android:paddingLeft="@dimen/dp_18"
        />
    <RelativeLayout
        android:id="@+id/rl_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_way"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音播报"
            android:textSize="@dimen/sp_16"
            android:textColor="#414141"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_14"
            />

        <TextView
            android:id="@+id/btn_thr"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_25"
            android:layout_toLeftOf="@+id/btn_loop"
            android:layout_marginRight="@dimen/dp_10"
            android:text="三次"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_voice_checked"
            android:layout_alignTop="@+id/btn_close"
            />
        <TextView
            android:id="@+id/btn_loop"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_25"
            android:layout_toLeftOf="@+id/btn_close"
            android:layout_marginRight="@dimen/dp_10"
            android:text="循环"
            android:textColor="#939393"
            android:gravity="center"
            android:background="@drawable/shape_voice_unchecked"
            android:layout_alignTop="@+id/btn_close"
            />
        <TextView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="关闭"
            android:textColor="#939393"
            android:gravity="center"
            android:background="@drawable/shape_voice_unchecked"
            android:layout_marginTop="@dimen/dp_12"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_s"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_alerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备报警中,请查看"
            android:layout_toLeftOf="@+id/img_switch"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            />
        <ImageView
            android:id="@+id/img_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_close"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_nitofy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="弹窗提醒"
            android:textSize="@dimen/sp_16"
            android:textColor="#414141"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#939393"
        android:layout_below="@+id/rl_s2"
        android:text="报警类型"
        android:paddingLeft="@dimen/dp_18"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"
        android:background="@color/white"
        android:layout_below="@+id/tv_type"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_alerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:cacheColorHint="#00ffffff"
        android:layout_below="@+id/view"
        android:overScrollMode="never"
        />
</RelativeLayout>