<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_timer"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >
        <ImageView
            android:id="@+id/img_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_timer"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_50"
            />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#6C6C6C"
            android:text="00:00"
            android:textSize="@dimen/sp_32"
            android:layout_toRightOf="@+id/img_timer"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="线路"
            android:layout_below="@+id/tv_timer"
            android:layout_alignLeft="@+id/tv_timer"
            android:textSize="@dimen/dp_14"
            />

        <LinearLayout
            android:id="@+id/linear_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_63"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="二"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="三"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="四"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="五"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="六"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="七"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/img_close"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"
        android:layout_below="@+id/rl_head"
        />
</RelativeLayout>