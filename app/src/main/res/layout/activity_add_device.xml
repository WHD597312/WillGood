<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/img_back"
            android:padding="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="GPRS添加"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/image_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/scan"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F7F7F7"
        />
   <RelativeLayout
       android:id="@+id/rl_body"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/head_title"
       >
       <TextView
           android:layout_marginLeft="@dimen/dp_30"
           android:id="@+id/tv_gprs"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/dp_30"
           android:text="■"
           android:textColor="#000000"
           android:gravity="center_vertical"
           android:layout_centerVertical="true"
           />
       <TextView
           android:id="@+id/tv_gprs1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/tv_gprs"
           android:layout_centerVertical="true"
           android:text="输入要连接的GPRS号"
           android:textSize="@dimen/sp_16"
           android:gravity="center_vertical"
           android:layout_marginLeft="@dimen/dp_9"
           android:textColor="#939393"
           />
   </RelativeLayout>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/rl_body"
        android:hint="请输入GPRS序列号"
        android:background="#f5f5f5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_25"
        />


    <Button
        android:id="@+id/bt_add_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_add_device"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_50"
        />
</RelativeLayout>
