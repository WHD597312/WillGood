<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".devicelist.AddTimeActivity">

    <!--<View-->
        <!--android:id="@+id/view_main"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_25"-->
        <!--android:background="#ffffff" />-->

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@mipmap/img_cancel"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="定时控制"
            android:textColor="#4b4b4b"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/img_ensure"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_39"
        >
        <com.weigan.loopview.LoopView
            android:id="@+id/loop_hour"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_180"
            android:layout_weight="1"
            />
        <com.weigan.loopview.LoopView
            android:id="@+id/loop_min"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_180"
            android:layout_weight="1"
            />
        <com.weigan.loopview.LoopView
            android:id="@+id/loop_second"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_180"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_list"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="秒"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/linear_l"
        android:layout_alignLeft="@+id/linear_l"
        android:text="重复"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="#575757"
        android:layout_marginTop="@dimen/dp_37"
        />

    <TextView
        android:id="@+id/btn_only_one"
        android:layout_width="@dimen/dp_75"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_repeat"
        android:layout_alignBottom="@+id/tv_repeat"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="执行一次"
        android:gravity="center"
        android:background="@drawable/shape_only_one"
        />
    <LinearLayout
        android:id="@+id/linear_week"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_repeat"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="一"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_week"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="二"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_week_gray"
            />
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="三"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_week_gray"
            />
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="四"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_week_gray"
            />
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="五"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_week_gray"
            />
        <TextView
            android:id="@+id/tv_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="六"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_week_gray"
            />
        <TextView
            android:id="@+id/tv_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="七"
            android:gravity="center"
            android:background="@drawable/shape_week_gray"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_week"
        android:layout_alignLeft="@+id/tv_repeat"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="#575757"
        android:text="线路"
        android:layout_marginTop="@dimen/dp_25"
        />
    <GridView
        android:id="@+id/grid_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line"
        android:horizontalSpacing="@dimen/dp_10"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
</RelativeLayout>