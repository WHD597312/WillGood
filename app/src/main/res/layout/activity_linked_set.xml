<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:scaleType="centerInside"
            android:src="@mipmap/img_cancel" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_back"
            android:layout_alignBottom="@id/img_back"
            android:gravity="center"
            android:text="联动设置"
            android:textColor="#4b4b4b"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/img_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/img_ensure"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_head"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#d8dbd5"
        />
    <TextView
        android:layout_below="@+id/view"
        android:id="@+id/tv_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="触发条件"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#414141"
        android:layout_marginTop="@dimen/dp_25"
        />

    <com.jaygoo.widget.RangeSeekBar
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/slide_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_case"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_indicator_background_color="#FFFFFF"
        app:rsb_indicator_height="@dimen/dp_30"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_indicator_text_color="#AFAFAF"
        app:rsb_indicator_width="@dimen/dp_40"
        app:rsb_mode="single"
        app:rsb_progress_color="#09c585"
        app:rsb_progress_default_color="#f5f5f5"
        app:rsb_progress_height="@dimen/dp_2"
        app:rsb_progress_radius="0dp"
        app:rsb_thumb_drawable="@mipmap/button"
        app:rsb_thumb_size="@dimen/dp_40"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_margin="14dp"
        app:rsb_tick_mark_text_size="18sp"
        app:rsb_max="40"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:layout_below="@+id/slide_bar"
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线路选择"
        android:gravity="center_vertical"
        android:textColor="#414141"
        android:layout_alignLeft="@+id/tv_case"
        android:layout_alignRight="@+id/tv_case"
        />
    <GridView
        android:id="@+id/gv_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:numColumns="4"
        android:layout_below="@+id/tv_line"
        android:layout_marginTop="@dimen/dp_19"
        android:horizontalSpacing="@dimen/dp_10"
        android:verticalSpacing="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/gv_line"
        android:id="@+id/rl_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_case"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="触发类型"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/btn_once"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:text="单次触发"
            android:layout_toLeftOf="@+id/btn_loop"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_once"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/btn_loop"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:text="循环触发"
            android:layout_alignParentRight="true"
            android:textColor="#939393"
            android:gravity="center"
            android:background="@drawable/shape_loop"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_low"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_30"
        android:layout_alignBottom="@+id/slide_bar"
        android:text="低于"
        android:layout_toLeftOf="@+id/btn_high"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_once"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/btn_high"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignBottom="@+id/slide_bar"
        android:text="高于"
        android:textColor="#939393"
        android:gravity="center"
        android:background="@drawable/shape_loop"
        android:layout_centerVertical="true"
        />

</RelativeLayout>