<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/bg_title_main"
        android:paddingBottom="@dimen/dp_15">

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_exit"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="设备控制"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_add" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:background="@mipmap/bg_main1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="定时控制"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="联动控制"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="开关量检测"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="报警设置"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="地图定位"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="掉电记忆"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/bg_main_switch2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_main_open2" />

                <TextView
                    android:id="@+id/tv_switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="配电系统"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>


            <ImageView
                android:id="@+id/img_refresh1"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bg_main_refresh"
                android:scaleType="center"
                android:src="@mipmap/ic_refresh2" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:background="@mipmap/bg_main2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@mipmap/ic_tem2" />

            <TextView
                android:id="@+id/tv_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/img_tem"
                android:text="0"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_tem"
                android:layout_toRightOf="@id/tv_tem"
                android:text="℃"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_tem"
                android:layout_toLeftOf="@id/tv_hum_unit"
                android:text="0"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_hum_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_hum"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:text="%"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/img_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@id/tv_hum"
                android:src="@mipmap/ic_hum2" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:background="@mipmap/bg_main_switch2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_main_open2" />

            <TextView
                android:id="@+id/tv_switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="控制系统"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp">

            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/bg_fill5_gray"
                android:gravity="center"
                android:text="掉电记忆"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/img_refresh2"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bg_main_refresh"
                android:scaleType="center"
                android:src="@mipmap/ic_refresh2" />
        </RelativeLayout>
    </LinearLayout>

    <!--</ScrollView>-->
</LinearLayout>